@using WebApplication1.Areas.admin.Models;
@model Products
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Size="";

}

<div class="container px-5 ">

    <div class="product-card ">
        <div class="container-fluid ">
            <div class="row ">
                <div class="col-md-9 mt-3">
                    <div class="row">
                        <div class="col-md-6">
                            <img src='~/images/man_cat.webp'
                                 style="width: 100%; height: auto;">
                        </div>

                        <div class="col-md-6">
                            <img src='~/images/@Model.ImgPath'
                                 style="width: 100%; height: auto;">
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mt-5  ">
                    <div class="row">
                        <div class="col-md-10">
                            <h3 class="product-card__size__title p-0 m-0 ">@Model.Name</h3>
                            <p class="p-0 m-0">@Model.Description</p>
                            <p class="product-card__size__title p-0 m-0" style="color: #c41f28;">@Model.Price EGP</p>
                            <div class="product-card__discoun p-0 m-0t">
                            </div>

                        </div>
                        
                    </div>
                    <div class="row product-card__size">
                        <div class="product-card__size__title">Size Options</div>
                        <div class="d-flex flex-wrap product-card__size__buttons" title="Please select size">
                         
                            <button type="button" title="Please choose size" value="S" class="size-button @(Model.size  == "S" ? "selectedSize" : "")" onclick="selectSize('S')">S</button>
                            <button type="button" title="Please choose size" value="M" class="size-button @(Model.size == "M" ? "selectedSize" : "")" onclick="selectSize('M')">M</button>
                            <button type="button" title="Please choose size" value="L" class="size-button @(Model.size == "L" ? "selectedSize" : "")" onclick="selectSize('L')">L</button>
                            <button type="button" title="Please choose size" value="XL" class="size-button@(Model.size == "XL" ? "selectedSize" : "")" onclick="selectSize('XL')">XL</button>
                            <button type="button" title="Please choose size" value="XXL" class="size-button@(Model.size == "XXL" ? "selectedSize" : "")" onclick="selectSize('XXL')">XXL</button>
                        </div>
                    </div>
                    <a onclick="addToCart('@Model.Id')" class="my-5">
                        <div class="btn btn-dark w-100">Add To Cart</div>
                        <partial name="_notfy" />
                    </a>
                    <div class="product-card__code">Product Code:  @Model.Id</div>
                     
                </div>
            </div>
        </div>
    </div>

</div>

 