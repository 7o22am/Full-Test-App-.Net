@model IEnumerable<WebApplication1.Areas.Employess.Models.Employees>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 


<div class="container-fluid vert ">
    <div class="row">

        <div class="col-md-2   ">
            @await Html.PartialAsync("_adminNavcshtml")



        </div>
        <div class="col-md-10 mt-5 ">
            <div class="d-flex justify-content-end">
                <a asp-action="Create" class="btn btn-outline-dark">Create New</a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpPhone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpEmail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpAge)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmpSalery)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpPhone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpAge)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmpSalery)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>

