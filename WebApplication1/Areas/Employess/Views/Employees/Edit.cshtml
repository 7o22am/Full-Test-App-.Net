                            <label asp-for="EmpName" class="control-label"></label>
                            <input asp-for="EmpName" class="form-control" />
                            <span asp-validation-for="EmpName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmpPhone" class="control-label"></label>
                            <input asp-for="EmpPhone" class="form-control" />
                            <span asp-validation-for="EmpPhone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmpDescription" class="control-label"></label>
                            <input asp-for="EmpDescription" class="form-control" />
                            <span asp-validation-for="EmpDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmpEmail" class="control-label"></label>
                            <input asp-for="EmpEmail" class="form-control" />
                            <span asp-validation-for="EmpEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmpAge" class="control-label"></label>
                            <input asp-for="EmpAge" class="form-control" />
                            <span asp-validation-for="EmpAge" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EmpSalery" class="control-label"></label>
                            <input asp-for="EmpSalery" class="form-control" />
                            <span asp-validation-for="EmpSalery" class="text-danger"></span>
                        </div>  <br /> <br />
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" /> &nbsp;
