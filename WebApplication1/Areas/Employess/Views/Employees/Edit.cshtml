@model WebApplication1.Areas.Employess.Models.Employees
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 

<div class="container-fluid vert ">
    <div class="row">

        <div class="col-md-2   ">
            @await Html.PartialAsync("_adminNavcshtml")



        </div>
        <div class="col-md-8  mt-5 ">

            <div class="row">
                <div class="col-md-10">
                    <form asp-action="Edit">
