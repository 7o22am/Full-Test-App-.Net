 @using WebApplication1.Areas.admin.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Products


@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4 m-5">
        <div class="row pb-2">
            <h2 class="text-danger "> Delete  Item</h2>

        </div>
        <div>
            <label asp-for="Name"></label>
            <input disabled asp-for="Name" class="form-control" />

        </div>
        <div>
            <label asp-for="Description"></label>
            <input disabled asp-for="Description" class="form-control" />

        </div>
        <div class="">
            <label asp-for="CategoryID"></label>
            <input disabled asp-for="CategoryID" class="form-control" />

        </div>

        <button type="submit" class="btn btn-danger my-3 ">Delete</button>
        <a asp-action="Index" asp-controller="Products" class="btn btn-info mx-1">back to Items</a>
    </div>


</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}