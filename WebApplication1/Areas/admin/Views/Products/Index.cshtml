 @using WebApplication1.Areas.admin.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Products>

 
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container-fluid vert ">
    <div class="row">

        <div class="col-md-2">
            @await Html.PartialAsync("_adminNavcshtml")
        </div>
        <div class="col-md-9 ">
            <div class="container-fluid my-5  ">
                <partial name="_notfy" />
                <div class="container-fluid ">
                    <div class="row">
                        <div class="col-md-6 d-flex justify-content-between">
                            <h2>Products </h2>
                        </div>
                        <div class="col-md-6 d-flex justify-content-between align-items-center">
                            <div></div>
                            <a asp-controller="Products" asp-action="New" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus-lg"></i> &nbsp;
                                Add New Prodects
                            </a>
                        </div>
                    </div>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                           
                            <th>
                                Image
                            </th>
                            <th  >
                                Name
                            </th>
                            <th  >
                                Description
                            </th>
                            <th  >
                                Title
                            </th>
                            <th  >
                                Category
                            </th>

                            <th >
                                CreatedDate
                            </th>

                            <th  >
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                <td>
                                    <img src="~/images/@item.ImgPath" style="width:48px" class="img-thumbnail" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td class="col-4">
                                    @item.Description
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.CategoryID

                                </td>

                                <td>
                                    @item.CreatedDate
                                </td>
                                <td>
                                    @item.ImgPath
                                </td>
                                <td>
                                    <a asp-controller="Products" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="bi bi-pencil"></i>
                                    </a> &nbsp;
                                    <a asp-controller="Products" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash3"></i>

                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
        </div>
    </div>


