  @using WebApplication1.Areas.admin.Models;
@using Microsoft.AspNetCore.Identity;
@model IdentityUser
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<form method="post">
    <div class="border p-3 mt-4 m-5">
        <div class="row pb-2">
            <h2 class="text-primary "> Edit  Item</h2>

        </div>
        <div>
            <label asp-for="UserName">User Name</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        

        <div class="mb-2">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="EmailConfirmed">Email Confirmed</label>
            <select asp-for="EmailConfirmed" class="form-control">
                <option value="False">False</option>
                <option value="True">True</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success my-2">save</button>
        <a asp-action="Index" asp-controller="Users" class="btn btn-info mx-1">back to Items</a>
    </div>


</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}