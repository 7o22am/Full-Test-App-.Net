 @using WebApplication1.Areas.admin.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProCategorys
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";



}
<div class="container-fluid vert ">
    <div class="row">

        <div class="col-md-2   ">
            @await Html.PartialAsync("_adminNavcshtml")
        </div>
        <div class="col-md-9  ">
            <form method="post" enctype="multipart/form-data">
                <div class="border p-3 mt-4 m-5">
                    <div class="row pb-2">

                        <h2 class="text-primary "> Add New Categories</h2>

                    </div>
                    <div>
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <br />
                    <hr />
                    <button type="submit" class="btn btn-primary">save</button>
                    <a asp-action="Index" asp-controller="Products" class="btn btn-info">back to Products</a>
                </div>


            </form>


        </div>


        @section Scripts {
            <partial name="_ValidationScriptsPartial" />

        }
