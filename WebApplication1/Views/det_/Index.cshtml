@{
    ViewData["Title"] = "Item Details";
    var apiResponse = ViewData["ApiResponse"] as MovieResult;
    var img = "https://image.tmdb.org/t/p/w500" as String;
}

 
<div class="continer">
    <div class="row p-4 m-4">
        <div class="col-md-4">
            <img src="@($"{img}{@apiResponse.poster_path}")" alt="" class="w-75" />

        </div>
        <div class="col-md-6">
            <h4>@apiResponse.Title </h4>
            <p>@apiResponse.Overview </p>
            <p>@apiResponse.release_date  </p>
            <p>@apiResponse.vote_count </p>

        </div>
    </div>
