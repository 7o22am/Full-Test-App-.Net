@model IEnumerable<Item> ;
 
@{
    ViewData["Title"] = "Index";
  
}



<div class="container p-3 ">

   <partial name="_notfy" />

    <div class="row">
        <div class="col-md-6">
            <h2>Index items view </h2>
        </div>
        <div class="col-md-6 text-end">

             <a asp-controller="Item" asp-action="New" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-lg"></i> &nbsp;
                 Add New Item
             </a>
        </div>

    </div>


</div>

<table class="table ">
    <thead> 
        <tr>
        <th>
                Name
        </th>
            <th>
                Description
            </th>
            <th>
                Title
            </th>
            <th>
                Category
            </th>
            <th>
                Image
            </th>
            <th>
                CreatedDate
            </th>
           
            <th>
                Actions
            </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Category?.Name.ToString()
                   
                </td>
                <td>
                    <img  src="~/images/@item.ImgPath" style="width:48px" class="img-thumbnail" />
                </td>
                <td>
                    @item.CreatedDate
                </td>
                  <td>
                    <a asp-controller="Item" asp-action="Edit"  asp-route-Id="@item.Id" class="btn btn-sm btn-info">
                    <i class="bi bi-pencil"></i>
                       </a> &nbsp;
                    <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger">
                 <i class="bi bi-trash3"></i>   
                
             </a>
                </td>
            </tr>
        }
    </tbody>
    
</table>
