@model IEnumerable<Categorys> ;

@{
    ViewData["Title"] = "Index";
}



<div class="container p-3 ">

    <partial name="_notfy" />

    <div class="row">
        <div class="col-md-6">
            <h2>Index items view </h2>
        </div>
        <div class="col-md-6 text-end">

             
        </div>

    </div>


</div>

<table class="table ">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
     
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
             
                <td>
                    <a asp-controller="Categorys" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-info">
                        <i class="bi bi-pencil"></i>
                    </a> &nbsp;
                    <a asp-controller="Categorys" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash3"></i>

                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>
